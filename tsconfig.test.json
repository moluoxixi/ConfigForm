{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "paths": {
      "@/*": ["./src/*"],
      "@test/*": ["./__test__/helpers/*"]
    },
    "types": ["vitest/globals", "node"],
    "allowImportingTsExtensions": true,
    "noEmit": false,
    "rewriteRelativeImportExtensions": true
  },
  "include": [
    "__test__/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
