{
  "name": "@moluoxixi/config-form",
  "type": "module",
  "version": "0.0.1",
  "packageManager": "pnpm@10.8.0",
  "config": {
    "commitizen": {
      "path": "cz-customizable"
    },
    "cz-customizable": {
      "config": ".cz-config.cjs"
    }
  },
  "author": "1983531544@qq.com",
  "license": "MIT",
  "repository": {
    "type": "git"
  },
  "keywords": [
    "vite",
    "vue",
    "react",
    "template",
    "cli",
    "scaffold",
    "create-vue"
  ],
  "engines": {
    "node": ">=20.18.0"
  },
  "scripts": {
    "build": "pnpm -r --filter './packages/*' build",
    "build:core": "pnpm --filter @moluoxixi/core build",
    "test": "pnpm --filter @moluoxixi/core test",
    "test:watch": "pnpm --filter @moluoxixi/core test:watch",
    "dev:vue": "pnpm --filter @playground/vue dev",
    "dev:react": "pnpm --filter @playground/react dev",
    "lint:eslint": "eslint . --fix && pnpm lint:eslint:vue && pnpm lint:eslint:react",
    "lint:eslint:vue": "pnpm --filter @playground/vue lint:eslint",
    "lint:eslint:react": "pnpm --filter @playground/react lint:eslint",
    "typecheck": "pnpm -r --filter './packages/*' typecheck",
    "submodule:update": "cd .cursor && git pull && cd .. && git submodule update --init --recursive --remote",
    "lint-staged": "lint-staged",
    "commit": "git add . && git-cz"
  },
  "dependencies": {
    "vue": "catalog:build"
  },
  "devDependencies": {
    "@commitlint/cli": "catalog:dev",
    "@commitlint/config-conventional": "catalog:dev",
    "@moluoxixi/eslint-config": "catalog:dev",
    "@types/fs-extra": "catalog:type",
    "@types/inquirer": "catalog:type",
    "@types/node": "catalog:type",
    "@vue-macros/volar": "catalog:type",
    "commitizen": "catalog:dev",
    "cz-customizable": "catalog:dev",
    "eslint": "catalog:dev",
    "eslint-plugin-format": "catalog:dev",
    "husky": "catalog:dev",
    "lint-staged": "catalog:dev",
    "tsx": "catalog:type",
    "typescript": "catalog:type"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix --no-warn-ignored"
    ]
  }
}
